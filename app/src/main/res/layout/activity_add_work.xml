<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.AddWorkActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:text="add work"
                    android:textColor="#000000"
                    android:textSize="40dp"
                    android:textStyle="bold|italic" />
            <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/addItemImage"/>

            <EditText
                    android:id="@+id/apCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="company"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:singleLine="true"
                    android:textStyle="bold|italic"/>

            <EditText
                    android:id="@+id/apTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="task"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:singleLine="true"
                    android:textStyle="bold|italic"/>



            <EditText
                    android:id="@+id/apSalary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:hint="salary"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textStyle="bold|italic" />

            <EditText
                    android:id="@+id/apNumberOfWorkers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:hint="NumberOfWorkers"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textStyle="bold|italic" />
            <EditText
                    android:id="@+id/upStreet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:hint="location"
                    android:onClick=""
                    android:textAlignment="center"
                    android:singleLine="true"
                    android:textStyle="bold|italic"
                    android:layout_gravity="center"/>
            <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:id="@+id/googleMaps"/>
