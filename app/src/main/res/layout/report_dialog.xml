    <EditText
            android:hint="Write you report here"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:id="@+id/report_text"
            app:layout_constraintStart_toStartOf="@+id/report_image"
            app:layout_constraintTop_toBottomOf="@+id/report_image"
            android:layout_marginTop="20dp"
            android:layout_marginStart="0dp" />

    <Button
            android:text="Submit Report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit_report"
            app:layout_constraintTop_toBottomOf="@+id/report_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.498" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/arrow_back_press"
            android:id="@+id/back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>