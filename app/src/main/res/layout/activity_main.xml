<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">

    <Button
            android:id="@+id/btn_SignOut"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="signOut"
            android:text="log out"
            app:layout_constraintTop_toBottomOf="@+id/list_Works"
            android:layout_marginTop="124dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <ListView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/list_Works"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:text="chat"
            android:onClick="chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            app:layout_constraintTop_toBottomOf="@+id/btn_SignOut"
            android:layout_marginTop="108dp"
            app:layout_constraintEnd_toEndOf="@+id/btn_SignOut"
            app:layout_constraintStart_toEndOf="@+id/addWork"
            app:layout_constraintHorizontal_bias="1.0" />

    <Button
            android:text="Move To Business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addWork"
            android:onClick="MoveToBusiness"
            app:layout_constraintTop_toBottomOf="@+id/btn_SignOut"
            android:layout_marginTop="108dp"
            app:layout_constraintStart_toStartOf="@+id/btn_SignOut" />


</androidx.constraintlayout.widget.ConstraintLayout>